                <div class="code-header">Complete Python Source Code</div>
                <pre><code class="language-python"># ---------------------------------------------
# Library Management System
# College Project - Python
# ---------------------------------------------

books = {}
students = {}
issued_books = {}

# ---------------------------------------------
# Add Book
# ---------------------------------------------
def add_book():
    book_id = input(&quot;Enter Book ID: &quot;)
    name = input(&quot;Enter Book Name: &quot;)
    author = input(&quot;Enter Author Name: &quot;)
    quantity = int(input(&quot;Enter Quantity: &quot;))
    books[book_id] = {
        &quot;name&quot;: name,
        &quot;author&quot;: author,
        &quot;quantity&quot;: quantity
    }
    print(&quot;‚úÖ Book Added Successfully&quot;)

# ---------------------------------------------
# View Books
# ---------------------------------------------
def view_books():
    if not books:
        print(&quot;‚ùå No books available&quot;)
        return
    print(&quot;\nAvailable Books:&quot;)
    print(&quot;ID\tName\tAuthor\tQuantity&quot;)
    for bid, info in books.items():
        print(f&quot;{bid}\t{info['name']}\t{info['author']}\t{info['quantity']}&quot;)

# ---------------------------------------------
# Add Student
# ---------------------------------------------
def add_student():
    student_id = input(&quot;Enter Student ID: &quot;)
    name = input(&quot;Enter Student Name: &quot;)
    students[student_id] = name
    print(&quot;‚úÖ Student Added Successfully&quot;)

# ---------------------------------------------
# View Students
# ---------------------------------------------
def view_students():
    if not students:
        print(&quot;‚ùå No students found&quot;)
        return
    print(&quot;\nStudent List:&quot;)
    print(&quot;ID\tName&quot;)
    for sid, name in students.items():
        print(f&quot;{sid}\t{name}&quot;)

# ---------------------------------------------
# Issue Book
# ---------------------------------------------
def issue_book():
    book_id = input(&quot;Enter Book ID: &quot;)
    student_id = input(&quot;Enter Student ID: &quot;)

    if book_id not in books:
        print(&quot;‚ùå Book not found&quot;)
        return
    if student_id not in students:
        print(&quot;‚ùå Student not found&quot;)
        return
    if books[book_id][&quot;quantity&quot;] &lt;= 0:
        print(&quot;‚ùå Book not available&quot;)
        return

    books[book_id][&quot;quantity&quot;] -= 1
    issued_books[book_id] = student_id
    print(&quot;‚úÖ Book Issued Successfully&quot;)

# ---------------------------------------------
# Return Book
# ---------------------------------------------
def return_book():
    book_id = input(&quot;Enter Book ID: &quot;)

    if book_id not in issued_books:
        print(&quot;‚ùå This book is not issued&quot;)
        return

    books[book_id][&quot;quantity&quot;] += 1
    del issued_books[book_id]
    print(&quot;‚úÖ Book Returned Successfully&quot;)

# ---------------------------------------------
# Main Menu
# ---------------------------------------------
def main():
    while True:
        print(&quot;\n------ Library Management System ------&quot;)
        print(&quot;1. Add Book&quot;)
        print(&quot;2. View Books&quot;)
        print(&quot;3. Add Student&quot;)
        print(&quot;4. View Students&quot;)
        print(&quot;5. Issue Book&quot;)
        print(&quot;6. Return Book&quot;)
        print(&quot;7. Exit&quot;)

        choice = input(&quot;Enter your choice: &quot;)

        if choice == &quot;1&quot;:
            add_book()
        elif choice == &quot;2&quot;:
            view_books()
        elif choice == &quot;3&quot;:
            add_student()
        elif choice == &quot;4&quot;:
            view_students()
        elif choice == &quot;5&quot;:
            issue_book()
        elif choice == &quot;6&quot;:
            return_book()
        elif choice == &quot;7&quot;:
            print(&quot;üìò Thank you for using Library Management System&quot;)
            break
        else:
            print(&quot;‚ùå Invalid choice&quot;)

# ---------------------------------------------
# Program Start
# ---------------------------------------------
main()
</code></pre>
